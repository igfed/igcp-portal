<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" controller="CP_OverviewController">
	<!-- INCLUDES -->
	<c:CP_Events aura:id="CP_Events" />
	<c:CP_Utils aura:id="CP_Utils" />
	<c:CP_Validation aura:id="CP_Validation" />
	<c:CP_Services aura:id="CP_Services" />
	<!-- ATTRS -->
	<aura:attribute name="totalLoanAmount" type="String" default=""></aura:attribute>
	<aura:attribute name="showMarketing" type="Boolean" default="false"></aura:attribute>
	<!-- HANDLERS -->
	<aura:handler name="init" value="{!this}" action="{!c.onInit}" />
	<!--  MARKUP -->
	<div class="igcp-container slds-p-around--small slds-large-p-around--medium slds-m-bottom--x-small slds-large-m-bottom--medium slds-large-m-right--medium">
		<h2 class="slds-m-top--small slds-m-bottom--medium">{!$Label.c.CP_Overview_Mortgage_h2}</h2>
		<div class="slds-grid slds-wrap">
			<aura:if isTrue="{!v.showMarketing}">
				<c:CP_Overview_Marketing_View tagline="{!$Label.c.CP_Overview_Mortgage_Marketing_Tagline}" cta="{!$Label.c.CP_Generic_Link_Learn_More}" href="#" />
				<aura:set attribute="else">
					{!v.body}
				</aura:set>
			</aura:if>
		</div>
	</div>
</aura:component>