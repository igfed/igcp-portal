<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
	<aura:attribute name="image" type="String" />
	<aura:attribute name="title" type="String" />
	<aura:attribute name="copy" type="String" />
	<aura:attribute name="buttonCopy" type="String" />
	<aura:attribute name="buttonLink" type="String" />
	<!--CARD-->
	<article class="igcp-card slds-card slds-grid slds-wrap">
		<div class="slds-card__header slds-size_2-of-12 slds-medium-size_1-of-12 slds-large-size_12-of-12 slds-m-bottom--zero slds-large-m-bottom--x-small slds-p-horizontal--none">
			<header class="slds-media slds-media_center">
				<div class="slds-media__figure">
					<img class="igcp-card__image" src="{!v.image}" />
				</div>
			</header>
		</div>
		<!--CARD BODY-->
		<div class="slds-card__body slds-card__body_inner slds-size_10-of-12 slds-medium-size_11-of-12 slds-large-size_12-of-12 slds-m-bottom--zero slds-large-m-bottom--x-small slds-p-horizontal--zero slds-medium-p-left--large slds-large-p-left--zero">
			<div class="slds-media__body">
				<h2 class="slds-p-left--xx-small slds-medium-p-left--zero slds-large-p-left--zero slds-m-bottom--zero slds-large-m-bottom--xx-small slds-p-top--x-small slds-large-p-top--zero">
                  <span class="slds-text-heading--medium">{!v.title}</span>
                </h2>
				<p class="igcp-utils__width--auto igcp-medium-utils__width--75 igcp-large-utils__width--full slds-show_medium slds-m-bottom--zero slds-medium-float_left slds-large-float_none">{!v.copy}</p>
				<a class="igcp-card__link slds-p-left--x-small slds-m-top--zero slds-medium-m-top--large slds-large-m-top--zero slds-medium-p-left--zero slds-medium-float_right slds-large-float_left slds-hide_large" href="{!v.buttonLink}">{!v.buttonCopy}<lightning:icon iconName="utility:right" size="x-small" class="igcp-link-glyph--after" /></a>
			</div>
		</div>
		<footer class="slds-card__footer slds-size_12-of-12 slds-text-align_left slds-m-top--zero slds-large-m-top--x-small slds-p-horizontal--none">
			<c:CP_Cmp_Link label="{!v.buttonCopy}" href="#" hasChevron="true" class="igcp-utils__font--semibold igcp-utils__font-size--mini"/>
		</footer>
	</article>
</aura:component>