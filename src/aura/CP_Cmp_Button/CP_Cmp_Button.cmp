<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
    
    <!-- ATTRS -->
    <aura:attribute name="id" Type="String" default=""/>
    <aura:attribute name="icon" Type="String" />
    <aura:attribute name="iconSize" Type="String" default="small"/>
    <aura:attribute name="class" type="String" />
    <aura:attribute name="label" type="String" default="Back" />

    <!-- HANDLERS -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div id="{!v.id}" aura:id="{!v.id}" class="{!v.class}">
        <lightning:button label="{!v.label}" variant="brand" class="{!'igcp-utils__width--100 slds-p-vertical--xx-small ' + v.buttonClass}" onclick="{!c.onClick}">
        	
        </lightning:button>
    </div>
</aura:component>