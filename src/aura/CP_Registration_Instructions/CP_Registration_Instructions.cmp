<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
	<!-- ATTRS -->
	<aura:attribute name="pageId" type="String" default="registration-instructions"></aura:attribute>
	<!-- MARKUP -->
	<div class="igcp-wrapper slds-grid slds-wrap slds-grid--align-center">
		
		<div class="slds-size_12-of-12 slds-m-top--large slds-m-bottom--small slds-text-align_center">
			<h2>Key Benefits</h2>
		</div>

		<c:CP_Cmp_Figure 
			class="slds-size_6-of-12 slds-text-align_center" 
			imageFile="safe.png"
			imageAlt="An illustrated image of a safe."
			title="Safe and Secure"
			description="Securely view investment performance, mortgage, and insurance." />

		<c:CP_Cmp_Figure 
			class="slds-size_6-of-12 slds-text-align_center" 
			imageFile="smartphone.png"
			imageAlt="An illustrated image of a smartphone."
			title="Convenience"
			description="View, download or print statements going back as far as seven years." />	

