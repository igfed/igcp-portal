<aura:component >
    <!-- ATTRS -->
    <aura:attribute name="id" type="String" default="default"></aura:attribute>
	<aura:attribute name="size" type="String" default="large"></aura:attribute>

    <!-- MARKUP -->
    <div aura:id="{!v.id}" id="{!v.id}" class="{!'igcp-modal-foundation ' + v.size + ' reveal'}" data-reveal="" data-additional-overlay-classes="igcp-modal-foundation__overlay">
         <button class="igcp-modal-foundation__button--close close-button" data-close="" aria-label="Close modal" type="button">
            <span class="igcp-utils__display--none" aria-hidden="true">&times;</span>
        </button>
        <c:CP_Cmp_Carousel />
    </div>
</aura:component>