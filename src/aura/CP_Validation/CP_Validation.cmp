<aura:component >

	<aura:attribute  name="userMinLength" type="Integer" default="6"></aura:attribute>
	<aura:attribute  name="userMaxLength" type="Integer" default="32"></aura:attribute>
	<aura:attribute  name="userIsAlphanumeric" type="Boolean" default="true"></aura:attribute>


    <aura:method name="form" action="{!c.onValidateForm}" > 
        <aura:attribute name="value" type="String" default="" />
        <aura:attribute name="callBack" type="function" default="" />
    </aura:method>

     <aura:method name="validateUsername" action="{!c.onValidateUsername}" > 
        <aura:attribute name="value" type="String" default="" />
        <aura:attribute name="callBack" type="function" default="" />
    </aura:method>

</aura:component>