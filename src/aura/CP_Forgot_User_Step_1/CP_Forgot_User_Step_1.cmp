<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" controller="CP_ForgotUserNameController">

	<!-- ATTRS -->
	<aura:attribute name="pageId" type="String" default="forgot-user-step-1"></aura:attribute>
	<aura:attribute name="inputErrors" type="Boolean" default="false"></aura:attribute>
	<aura:attribute name="inputsReceived" type="Integer" default="1"></aura:attribute>
	<aura:attribute name="payload" type="Map" default="{}"></aura:attribute>

	<!-- STEP 1 -->
	<aura:attribute name="clientNum" type="String"></aura:attribute>
	<aura:attribute name="email" type="String" ></aura:attribute>

	<!-- INCLUDES -->
	<c:CP_Events aura:id="CP_Events" />
	<c:CP_Utils aura:id="CP_Utils" />
	<c:CP_Validation aura:id="CP_Validation" />
	<c:CP_Services aura:id="CP_Services" />

	<!-- HANDLERS -->
	<aura:handler event="c:CP_Evt_Submit" action="{!c.onSubmit}" />
	<aura:handler event="c:CP_Evt_Send_Input_Value" action="{!c.onInputValueReceived}" />
	<aura:handler event="c:CP_Evt_Input_Blur" action="{!c.onInputBlur}" />
	
	<!-- METHODS-->
	<aura:method name="onSubmitForm" action="{!c.submitForm}" description="Call submit form">
		<aura:attribute name="payload" type="Map"></aura:attribute>
	</aura:method>
	
	<aura:method name="onNextStep" action="{!c.gotoNextStep}" description="Called when ready to proceed to next step">
		<aura:attribute name="payload" type="Map"></aura:attribute>
	</aura:method>

	<!-- MARKUP -->
    <div class="igcp-wrapper slds-grid slds-wrap slds-grid--align-center slds-grid_pull-padded slds-p-top--small slds-medium-p-top--xx-large">
        <div class="igcp-utils__display--none igcp-utils__display--block slds-medium-size_3-of-12"></div>
        
        <div class="slds-p-around--small slds-medium-p-around--zero slds-size_12-of-12 slds-medium-size_6-of-12">
            <h1>Forgot your username</h1>
            <c:CP_Cmp_Progress_Indicator currentStep="1" totalSteps="2" />
            <div class="igcp-label--small">Step 1</div>
            <h2>Verify your identity</h2>
            <p class="igcp-utils__width--100 igcp-large-utils__width--75">Enter your profile credentials to verify your identity.</p>
            <div class="slds-grid slds-wrap">
                <div class="slds-form slds-size_12-of-12">
                    <!--FIELDS-->
                    <!-- CLIENT NUMBER -->
                    <c:CP_Cmp_Input_Text id="client-number" maxLength="13" type="client-number" form="{!v.pageId}" label="Client Number" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" hasFocus="true"/>

                    <!-- EMAIL ADDRESS -->
                    <c:CP_Cmp_Input_Text id="email-input" form="{!v.pageId}" type="email" label="Email" placeholder="" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" />
                </div>
                <!--CTAS-->
                <c:CP_Cmp_Form_Back_Next id="{!v.pageId}" backLabel="Cancel" nextLabel="Next" nextType="submit" form="{!v.pageId}" />
            </div>
        </div>    
        <div class="igcp-utils__display--none igcp-utils__display--block slds-medium-size_3-of-12"></div>
    </div>
</aura:component>