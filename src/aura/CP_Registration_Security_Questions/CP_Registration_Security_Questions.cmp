<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" controller="CP_RegistrationController">
	<!-- ATTRS -->
	<aura:attribute name="form" type="String" default="default"></aura:attribute>
	<aura:attribute name="options" type="String[]" default=""></aura:attribute>
	<aura:attribute name="payload" type="Map" default="{}"></aura:attribute>

	<aura:attribute name="securityQuestion1" type="String"></aura:attribute>
	<aura:attribute name="securityQuestion2" type="String"></aura:attribute>
	<aura:attribute name="securityQuestion3" type="String"></aura:attribute>
	<aura:attribute name="tooltip" type="String"></aura:attribute>
	<aura:attribute name="lang" type="String"></aura:attribute>

	<!-- HANDLERS -->
	<aura:handler event="c:CP_Evt_Set_Input_Value" action="{!c.onSetValue}" />

	<!-- INCLUDES -->
	<c:CP_Utils aura:id="CP_Utils" />
	<c:CP_Events aura:id="CP_Events" />
	<c:CP_Services aura:id="CP_Services" />

	<!-- HANDLERS -->
	<aura:handler name="init" value="{!this}" action="{!c.onInit}" />
	
	<!-- MARKUP -->
	<div aura:id="security-questions-container">
		<!-- MARKUP -->
		<!-- QUESTION ONE -->
		<c:CP_Cmp_Input_Selector id="security-1-selector" tooltip="{!v.tooltip}" form="{!v.form}" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" label="{!$Label.c.CP_Registration_Step_2_Security_Question_1}" placeholder="{!$Label.c.CP_Registration_Step_2_Security_Question_Placeholder}" defaultOptions="{!v.options}" type="question"/>

		<!-- ANSWER 1 -->
		<c:CP_Cmp_Input_Text id="security-1-answer" type="text" form="{!v.form}" label="{!$Label.c.CP_Registration_Step_2_Security_Answer_1}" placeholder="" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" />

		<!-- QUESTION 2 -->
		<c:CP_Cmp_Input_Selector id="security-2-selector" tooltip="{!v.tooltip}" form="{!v.form}" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" label="{!$Label.c.CP_Registration_Step_2_Security_Question_2}" placeholder="{!$Label.c.CP_Registration_Step_2_Security_Question_Placeholder}" defaultOptions="{!v.options}" type="question"/>

		<!-- ANSWER 2 -->
		<c:CP_Cmp_Input_Text id="security-2-answer" type="text" form="{!v.form}" label="{!$Label.c.CP_Registration_Step_2_Security_Answer_2}" placeholder="" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" />

		<!-- QUESTION 3 -->
		<c:CP_Cmp_Input_Selector id="security-3-selector" tooltip="{!v.tooltip}" form="{!v.form}" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" label="{!$Label.c.CP_Registration_Step_2_Security_Question_3}" placeholder="{!$Label.c.CP_Registration_Step_2_Security_Question_Placeholder}" defaultOptions="{!v.options}" type="question"/>

		<!-- ANSWER 3 -->
		<c:CP_Cmp_Input_Text id="security-3-answer" type="text" form="{!v.form}" label="{!$Label.c.CP_Registration_Step_2_Security_Answer_3}" placeholder="" class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium" />
	</div>
</aura:component>