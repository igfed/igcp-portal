<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">

	<aura:attribute  name="class" type="String" default="slds-size_12-of-12 slds-medium-size_6-of-12 slds-large-size_6-of-12"></aura:attribute>

	<aura:attribute  name="label" type="String" default="Gain / Loss"></aura:attribute>

	<aura:attribute  name="value" type="String" ></aura:attribute>

	<aura:attribute  name="percentage" type="String" ></aura:attribute>

    <div class="{v.class}">
         <h3 class="igcp-label--small slds-m-bottom--none slds-large-m-bottom--x-small">{!v.label}</h3>
         <div class="igcp-value--large slds-m-bottom--small slds-large-m-bottom--none"><sup>$</sup>{!v.value}<span class="igcp-percentage--large">
         	<sup><lightning:icon iconName="utility:arrowup" size="x-small" class="igcp-arrow--up igcp-value--gain" /></sup>
         	{!v.percentage}%

         </span>
         </div>
    </div>
</aura:component>