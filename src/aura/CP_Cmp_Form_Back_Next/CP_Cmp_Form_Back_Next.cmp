<aura:component >

	<!-- INCLUDES -->
	<c:CP_Events aura:id="CP_Events" />
    
    <!-- ATTRS -->
    <aura:attribute name="id" type="String" default="default" ></aura:attribute>
    <aura:attribute name="form" type="String" default="default"></aura:attribute>
    <aura:attribute name="nextType" type="String" default="default"></aura:attribute>
    <aura:attribute name="class" type="String" default="slds-size_12-of-12 slds-grid slds-wrap slds-grid--align-center slds-p-bottom--x-large slds-m-top--x-large"/>
    <aura:attribute name="backLabel" type="String" default="Back" />
    <aura:attribute name="nextLabel" type="String" default="Next" />
    <aura:attribute name="modalID" type="String" default=""/>

    <!-- HANDLERS -->
    <aura:handler name="init" value="{!this}" action="{!c.onInit}" />
    
    <!-- MARKUP -->
    <div class="{!v.class}">
        <!--CTAS-->
        <div class="igcp-utils__order--2 igcp-medium-utils__order--1 slds-m-horizontal--medium slds-medium-m-horizontal--zero slds-size_12-of-12 slds-medium-size_5-of-12">
            
            <button class="igcp-utils__width--100 slds-m-top--large slds-medium-m-top--zero slds-button slds-button--neutral slds-p-vertical--xx-small slds-float_left" onclick="{!c.onBack}">{!v.backLabel}</button>
        </div>
        
        <div class="igcp-utils__display--none igcp-medium-utils__display--flex igcp-utils__order--2 slds-size_2-of-12"></div>
        
        <div class="igcp-utils__order--1 igcp-medium-utils__order--3 slds-m-horizontal--medium slds-medium-m-horizontal--zero slds-size_12-of-12 slds-medium-size_5-of-12">

            <aura:if isTrue="{!v.nextType == 'default'}">
    			 <button data-open="{!v.modalID}" class="igcp-utils__width--100 slds-m-top--large slds-medium-m-top--zero slds-button slds-button--brand slds-p-vertical--xx-small slds-float_right" onclick="{!c.onNext}">{!v.nextLabel}</button>	
            </aura:if>

            <aura:if isTrue="{!v.nextType == 'submit'}"  >
            	<c:CP_Cmp_Submit id="form_submit" for="{!v.form}" label="{!v.nextLabel}" class="igcp-utils__width--100 slds-m-top--large slds-medium-m-top--zero slds-button slds-button--brand slds-float_right"/>
            </aura:if>           
        </div>
    </div>
</aura:component>