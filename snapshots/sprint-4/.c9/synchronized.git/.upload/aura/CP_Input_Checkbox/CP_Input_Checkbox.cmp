<aura:component >
    
    <aura:attribute name="id" type="String" />
    <aura:attribute name="copy" type="String" />
    <aura:attribute name="class" type="String" default="" />
    <aura:attribute name="isChecked" type="Boolean" default="false"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    
    <div class="{!'igcp-input__checkbox ' + v.class}">
        
        <div class="slds-form-element">
            <div class="slds-form-element__control">
               
                
                
                <label class="slds-checkbox">
                  <ui:inputCheckbox aura:id="checkbox" value="{!v.isChecked}" change="{!c.onCheck}"/>
                  <span class="slds-checkbox--faux"></span>
                  <span class="slds-form-element__label input-label">{!v.copy}</span>
                </label>
               
            </div>
        </div>
    </div>
</aura:component>