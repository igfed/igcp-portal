<aura:component >
    <div class="igcp-wrapper slds-grid slds-wrap slds-grid--align-center slds-grid_pull-padded slds-p-top--xx-large">
        
        <div class="slds-size_3-of-12"></div>
        <div class="slds-size_6-of-12">
            
            <h1>Register for Online Access</h1>
            
            <c:CP_Progress_Indicator currentStep="1" totalSteps="3" />
            
            <div class="igcp-label--small">Step 1</div>
            
            <h2>Link Your Account</h2>
            
            <p class="igcp-utils__width--75">Enter your Investors Group information to link your account to your online profile.</p>
        
            <c:CP_Input_Text label="Client Number" 
            placeholder="Username" 
            class="igcp-utils__width--75 slds-m-vertical--medium"
            tooltip="Where's your client number?"/>
            
            <c:CP_Input_Text label="Postal Code" 
            placeholder="ie M2V 2V8" 
            class="igcp-utils__width--50 slds-m-vertical--medium" />
            
            <c:CP_Input_Text label="Date of Birth" 
            placeholder="ie DD/MM/YYYY" 
            class="igcp-utils__width--50 slds-m-vertical--medium" />
            
            <div class="slds-grid slds-wrap slds-grid--align-center slds-grid_pull-padded slds-p-bottom--xx-large slds-p-horizontal--x-small">
                <div class="slds-size_6-of-12">
                    
                    <button class="igcp-utils__width--75 slds-button slds-button--neutral slds-p-vertical--xx-small slds-float_left slds-m-top--large">Cancel</button>
                </div>
                
                <div class="slds-size_6-of-12">
                    
                    <button class="igcp-utils__width--75 slds-button slds-button--brand slds-p-vertical--xx-small slds-float_right slds-m-top--large">Next - Security Question</button>
                </div>
            </div>
        </div>
        <div class="slds-size_3-of-12"></div>
        
    </div>
</aura:component>

