<aura:component >
    <div class="igcp-wrapper slds-grid slds-wrap slds-grid--align-center slds-grid_pull-padded slds-p-top--small slds-medium-p-top--xx-large">
        
        <div class="igcp-utils__display--none igcp-utils__display--block slds-medium-size_3-of-12"></div>
        <div class="slds-p-around--small slds-medium-p-around--zero slds-size_12-of-12 slds-medium-size_6-of-12">
            
            <h1>Register for Online Access</h1>
            
            <c:CP_Progress_Indicator currentStep="1" totalSteps="3" />
            
            <div class="igcp-label--small">Step 1</div>
            
            <h2>Link Your Account</h2>
            
            <p class="igcp-utils__width--100 igcp-large-utils__width--75">Enter your Investors Group information to link your account to your online profile.</p>
            
            <div class="slds-grid slds-wrap">
                
                <!--FIELDS-->
                <c:CP_Input_Text label="Client Number" 
                placeholder="Client Number" 
                class="slds-size_12-of-12 slds-large-size_9-of-12 slds-m-vertical--medium"
                tooltip="Where's your client number?"/>
                
                <c:CP_Input_Text label="Postal Code" 
                placeholder="ie M2V 2V8" 
                class="slds-size_12-of-12 slds-large-size_5-of-12 slds-m-vertical--medium" />
                
                <div class="igcp-utils__display--none igcp-large-utils__display--flex slds-size_7-of-12"></div>
                
                <c:CP_Input_Text label="Date of Birth" 
                placeholder="ie DD/MM/YYYY" 
                class="slds-size_12-of-12 slds-large-size_5-of-12 slds-m-vertical--medium" />
                
                <div class="igcp-utils__display--none igcp-large-utils__display--flex slds-size_7-of-12"></div>
                
                <!--CTAS-->
                <c:CP_Form_Back_Next backLabel="Cancel"
                    nextLabel="Next"/>
                    
                <c:CP_Button_Chat class="slds-size_12-of-12 slds-is-relative slds-m-bottom--medium"
                label="Need help?"
                icon="utility:chat"/>
            </div>
        </div>
        <div class="igcp-utils__display--none igcp-utils__display--block slds-medium-size_3-of-12"></div>
    </div>
</aura:component>